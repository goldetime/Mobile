<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <TextView
        android:text="Нэмэлт мэдээлэл"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/info"
        android:textSize="20sp"
        android:typeface="serif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <EditText
        android:id="@+id/e_degree"
        android:hint="Зэрэг цол"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <TextView
        android:text="Заадаг хичээлүүд"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
      <CheckBox android:id="@+id/c_cprog"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:onClick="onCheckboxClicked"
          android:text="C"/>
      <CheckBox android:id="@+id/c_cplusplus"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:onClick="onCheckboxClicked"
          android:text="C++"/>
      <CheckBox android:id="@+id/c_java"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:onClick="onCheckboxClicked"
          android:text="Java"/>
      <CheckBox android:id="@+id/c_linux"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:onClick="onCheckboxClicked"
          android:text="Linux"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
      <Button
          android:id="@+id/save"
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:text="save" />

      <Button
          android:id="@+id/cancel"
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:text="cancel" />
    </LinearLayout>
  </LinearLayout>
</FrameLayout>
